    section {
        background-color: var(--surface-light);
        padding-top: 24px;
        max-width: 1955px;
    }
    header {
        display: flex;
        flex-direction: column;
        max-width: 100%;
        margin-bottom: 16px;
        position: relative;
    }
    header .title h1 a {
        color: var(--text-white);
        font-size: var(--font-size-h2);
        text-decoration: none;

    }
    header .title p a {
        color: var(--text-muted);
        text-decoration: none;
    }
    header .title {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    header > a {
    font-size: var(--font-size-small);
    font-weight: 500;
  }
  header a:hover {
    text-decoration: underline;
  }
  .container_playlister {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(175px, 1fr));

    /* hide wrapping rows */
    grid-template-rows: min-content;
    grid-auto-rows: 0;
    gap: 0 var(--space-lg);
    overflow: hidden;
  }
</style>
